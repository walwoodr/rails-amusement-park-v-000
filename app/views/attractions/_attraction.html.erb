<li class="attraction">
  <%= content_tag :h3, attraction.name %>
  <p>Costs <%= pluralize(attraction.tickets, 'ticket') %>.</p>
  <p>Nausea rating: <%= attraction.nausea_rating %></p>
  <p>Happiness rating: <%= attraction.happiness_rating %></p>
  <%= link_to "Go on #{attraction.name}", attraction_path(attraction) if !current_user.admin %>
  <%= link_to "Edit #{attraction.name}", edit_attraction_path(attraction) if current_user.admin %>
  <%= link_to "Show #{attraction.name}", attraction_path(attraction) if current_user.admin %>
</li>
